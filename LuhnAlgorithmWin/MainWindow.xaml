<Window x:Class="LuhnAlgorithmWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Luhn Algorithm Validator" Height="250" Width="350" ResizeMode="NoResize">
    <WrapPanel Orientation="Vertical" Margin="10">
        <Label Content="Please enter a number:" />
        <TextBox Name="CreditCardNumber" SelectionChanged="CreditCardNumber_SelectionChanged"/>
        <Button Width="200" Margin="10" Click="Button_Click">Validate</Button>
        <Separator />
        <Label Name="ValidationTest" FontWeight="Bold"/>
        <Label Name="Type" FontWeight="Bold"/>
        <Label Name="Bank" FontWeight="Bold"/>
    </WrapPanel>
</Window>
